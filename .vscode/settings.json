{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/*.map": { "when": "$(basename)" },
        "**/*.js": { "when": "$(basename).ts" },
        "**/*.css": { "when": "$(basename).scss" },
		".gulp-tsc-tmp-*": true
    },
	"typescript.tsdk": "./node_modules/typescript/lib",
	"typescript.referencesCodeLens.enabled": true
}